{
	"name": "@spec-mcp/server",
	"version": "0.1.0",
	"mcpName": "io.github.lucasilverentand/spec-mcp",
	"description": "Model Context Protocol server for managing software project specifications",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"bin": {
		"spec-mcp": "./dist/index.js"
	},
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch",
		"clean": "rm -rf dist",
		"typecheck": "tsc --noEmit",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"inspector": "pnpm build && NPM_CONFIG_LOGLEVEL=error npx --yes @modelcontextprotocol/inspector node dist/index.js"
	},
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.18.2",
		"glob": "^11.0.0",
		"pino": "^9.12.0",
		"pino-pretty": "^13.1.1",
		"yaml": "^2.5.1"
	},
	"devDependencies": {
		"@modelcontextprotocol/inspector": "^0.16.8",
		"@spec-mcp/core": "workspace:*",
		"@spec-mcp/data": "workspace:*",
		"@spec-mcp/tsconfig": "workspace:*",
		"@types/node": "^24.5.2",
		"tsup": "^8.5.0",
		"typescript": "^5.9.2",
		"vitest": "^3.2.4",
		"zod": "3.23.8"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"keywords": [
		"mcp",
		"model-context-protocol",
		"specifications",
		"project-management",
		"requirements",
		"planning"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/lucasilverentand/spec-mcp.git",
		"directory": "packages/server"
	},
	"publishConfig": {
		"registry": "https://registry.npmjs.org",
		"access": "public"
	}
}
