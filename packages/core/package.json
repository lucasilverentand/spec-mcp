{
	"name": "@spec-mcp/core",
	"version": "0.1.0",
	"description": "Core business logic for MCP specification management",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"clean": "rm -rf dist",
		"typecheck": "tsc --noEmit",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage"
	},
	"dependencies": {
		"@spec-mcp/data": "workspace:*",
		"@spec-mcp/utils": "workspace:*",
		"zod": "3.23.8"
	},
	"devDependencies": {
		"@spec-mcp/tsconfig": "workspace:*",
		"@types/node": "^24.5.2",
		"typescript": "^5.9.2",
		"vitest": "^3.2.4"
	},
	"engines": {
		"node": ">=18.0.0"
	}
}
