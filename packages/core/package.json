{
	"name": "@spec-mcp/core",
	"description": "Core functionality for managing Spec MCP specifications",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"dist",
		"README.md"
	],
	"scripts": {
		"build": "pnpm clean && tsc",
		"build:watch": "tsc --watch",
		"dev": "pnpm build:watch",
		"clean": "rm -rf dist *.tsbuildinfo",
		"typecheck": "tsc --noEmit",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"prebuild": "pnpm typecheck",
		"prepublishOnly": "pnpm build && pnpm test"
	},
	"dependencies": {
		"@spec-mcp/schemas": "workspace:*",
		"@spec-mcp/utils": "workspace:*",
		"semver": "^7.7.2",
		"yaml": "^2.3.4",
		"zod": "4.1.11"
	},
	"devDependencies": {
		"@spec-mcp/tsconfig": "workspace:*",
		"@types/node": "^20.11.0",
		"@types/semver": "^7.7.1",
		"@vitest/coverage-v8": "^1.3.0",
		"typescript": "^5.3.0",
		"vitest": "^1.3.0"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"keywords": [
		"data-management",
		"schemas",
		"validation",
		"specifications",
		"mcp",
		"yaml"
	]
}
