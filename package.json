{
	"name": "@spec-mcp/workspace",
	"private": true,
	"description": "Monorepo for MCP specifications server with intelligent tooling",
	"type": "module",
	"workspaces": [
		"packages/*",
		"apps/*"
	],
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev",
		"clean": "turbo run clean",
		"typecheck": "turbo run typecheck",
		"lint": "biome lint .",
		"lint:fix": "biome lint --write .",
		"format": "biome format --write .",
		"format:check": "biome format .",
		"check": "biome check .",
		"check:fix": "biome check --write .",
		"test": "turbo run test",
		"test:watch": "turbo run test:watch",
		"test:coverage": "turbo run test:coverage",
		"pre-commit": "biome check --write --unsafe && turbo run build && turbo run typecheck && turbo run test",
		"inspector": "cd apps/mcp && pnpm inspector",
		"workspace:list": "pnpm list -r --depth=-1",
		"workspace:graph": "pnpm list -r --depth=-1 --json",
		"version:sync": "node scripts/sync-versions.js",
		"knip": "knip",
		"generate:test-data": "tsx scripts/generate-test-data.ts"
	},
	"dependencies": {
		"glob": "^11.0.3",
		"zod": "^3.25.76"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.5",
		"@types/node": "^24.7.2",
		"@vitest/coverage-v8": "^3.2.4",
		"knip": "^5.64.3",
		"tsx": "^4.20.6",
		"turbo": "^2.5.8",
		"typescript": "^5.9.3",
		"vitest": "^3.2.4",
		"yaml": "^2.8.1"
	},
	"engines": {
		"node": ">=18.0.0",
		"pnpm": ">=8.0.0"
	},
	"packageManager": "pnpm@8.15.0"
}
