{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"test": {
			"dependsOn": ["build"],
			"outputs": ["coverage/**"]
		},
		"test:watch": {
			"cache": false,
			"persistent": true
		},
		"test:coverage": {
			"dependsOn": ["build"],
			"outputs": ["coverage/**"]
		},
		"typecheck": {
			"dependsOn": ["^build"],
			"outputs": []
		},
		"clean": {
			"cache": false
		},
		"lint": {
			"outputs": []
		},
		"lint:fix": {
			"outputs": [],
			"cache": false
		},
		"format": {
			"outputs": [],
			"cache": false
		},
		"format:check": {
			"outputs": []
		},
		"check": {
			"outputs": []
		},
		"check:fix": {
			"outputs": [],
			"cache": false
		}
	}
}
